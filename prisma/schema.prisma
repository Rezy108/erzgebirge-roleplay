generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Track {
  SUPPORTER
  ENTWICKLUNG
  HIGH_TEAM
}

enum ApplicationStatus {
  EINGEGANGEN
  IN_BEARBEITUNG
  ANGENOMMEN
  ABGELEHNT
}

model User {
  id          String   @id @default(cuid())
  discordId   String   @unique
  discordName String
  avatarUrl   String?
  createdAt   DateTime @default(now())

  applications Application[]
}

model Application {
  id        String            @id @default(cuid())
  userId    String
  track     Track
  status    ApplicationStatus @default(EINGEGANGEN)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  user    User               @relation(fields: [userId], references: [id])
  answers ApplicationAnswer[]
}

model ApplicationAnswer {
  id            String      @id @default(cuid())
  applicationId String
  questionKey   String
  answer        String

  application   Application @relation(fields: [applicationId], references: [id])

  @@index([applicationId])
}
enum ApplicationRole {
  SUPPORT
  DEVELOPMENT
  HIGH_TEAM
}

enum ApplicationStatus {
  NEW
  IN_REVIEW
  ACCEPTED
  REJECTED
}

model Application {
  id            String            @id @default(cuid())
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  discordId     String
  discordName   String
  discordAvatar String?

  role          ApplicationRole
  status        ApplicationStatus @default(NEW)

  // Standard Fragen
  age           Int?
  timezone      String?
  playtime      String?
  motivation    String
  strengths     String
  weaknesses    String
  experience    String?
  availability  String
  scenario      String

  // Rollen-spezifisch (optional)
  devStack      String?
  devProjects   String?
  highTeamWhy   String?
  highTeamExp   String?

  adminNote     String?

  @@index([discordId])
  @@index([status])
  @@index([role])
}
